<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAsk"
        android:layout_width="96dp"
        android:layout_height="39dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="338dp"
        android:text="Ask"
        app:layout_constraintBottom_toTopOf="@+id/lblQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lblQuestion"
        android:layout_width="363dp"
        android:layout_height="41dp"
        android:layout_marginBottom="33dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ask me anything"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblResponse" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="565dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/lblQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/magic_8_ball_3" />

    <TextView
        android:id="@+id/lblResponse"
        android:layout_width="150dp"
        android:layout_height="115dp"
        android:layout_marginBottom="175dp"
        android:layout_marginTop="148dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/lblQuestion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>